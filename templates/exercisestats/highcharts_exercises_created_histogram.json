{
    "chart": {
        "renderTo": "container",
        "plotBackgroundColor": "rgba(35,37,38,0)",
        "backgroundColor": "rgba(35,37,38,100)",
        "borderColor": "rgba(35,37,38,100)",
        "lineColor": "rgba(35,37,38,100)",
        "plotBorderColor": "rgba(35,37,38,100)",
        "plotBorderWidth": null,
        "plotShadow": false,
        "height": 340,
    },
    "colors": [ "#058DC7", "#50B432", "#EF561A" ],
    "credits": { "enabled": false },
    "title": { "text": "Exercise creation over time" },
    "legend": { "enabled": true },
    "plotOptions": {
        "column": {
            "pointPadding": 0,
            "groupPadding": 0
        }
    },
    "series": [
        {% for data in series %}
            {
                "name": "{{ data.name }}",
                "type": "{{ data.type }}",
                "data": {{ data.data_values }},
                "yAxis": {{ data.axis }},
            }{% if not loop.last %},{% endif %}
        {% endfor %}
    ],
    "yAxis": [
        {% for axis in axes %}
            {
                "title": { "text": null },
                "allowDecimals": false,
                "min": 0,
                "max": {{ axis.max }},
                "labels": {
                    {% if loop.last %}
                        "style": { "color": "#50B432" }
                    {% else %}
                        "style": { "color": "#058DC7" }
                    {% endif %}
                }
                {% if loop.last %}
                    , "opposite": true
                {% endif %}
            }{% if not loop.last %},{% endif %}
        {% endfor %}
    ],
    "xAxis": { "type": "datetime" }
}
