<li class="objective" style="width: {{objectiveWidth}}%">
    <a data-id="{{objectiveID}}" class="objective simple-button action-gradient {{type}}
        {{#if statusCSS}} seethrough exercise-color {{statusCSS}}
        {{else}}
          {{#if complete}} complete seethrough exercise-color started {{else}} blue {{/if}}
        {{/if}}"

        href="{{url}}"
        data-progress="{{progress}}">
            <span class="objective-description">{{description}}</span>
            {{#unless complete}}
            <span class="objective-progress-meter" style="height: {{iconFillHeight}}px"></span>
            {{/unless}}
    </a>
    <div class="hover-data" style="display: none">
        <div>
          {{#if isVideo}}Watch video <b>{{description}}</b>{{/if}}
          {{#if isAnyVideo}}Watch any video{{/if}}
          {{#if isExercise}}Complete exercise <b>{{description}}</b>{{/if}}
          {{#if isAnyExercise}}Complete any exercise{{/if}}
        </div>
        <div class="goal-tooltip-status">
          <span>Status:</span>
          <span>
            {{#if complete}}
              Complete
              {{#if isAnyVideo}} (<b>{{description}}</b>){{/if}}
              {{#if isAnyExercise}} (<b>{{description}}</b>){{/if}}
            {{else}}
              {{#if progress}} In progress ({{progressStr}}%) {{else}} Not started {{/if}}
            {{/if}}
            {{#if struggling}} <span class="goal-tooltip-struggling">(Struggling)<span> {{/if}}
          </span>
        </div>
    </div>
</li>
